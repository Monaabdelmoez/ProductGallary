@model Category
@{
    ViewData["Title"] = "اضافه فئه جديده";
       
 }

<h3>إضافة فئه جديد </h3>

<form method="post" asp-action="Savenew" asp-controller="Category" > @*asp-route-id="@Model.Id"*@

    <div>
       <label asp-for="Name">أسم الفئه </label>
       <input asp-for="Name" class="form-control" /> 
       <span asp-validation-for="Name" class="text-danger"></span>

    </div>
 
    <input type="submit" value="إضافة" class="btn btn-success" />
</form>



<script src="~/lib/jquery/dist/jquery.min.js"></script> 
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script> 
