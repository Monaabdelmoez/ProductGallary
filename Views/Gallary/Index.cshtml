@using ProductGallary.TDO

@{
    ViewData["Title"] = "Index";
}

<h1>المعارض</h1>
<div class="container">
<div class="row">

   @foreach (var item in @Model)
    { 
        <div class='col-4 my-shadow mb-3'>
            <div class="card ">
              <a class="btn btn-light" asp-controller="Product" asp-action="showproductatgallary" asp-route-id="@item.Id"> 

               <img class="card-img-top" height="300" width="360" src="/img/GallaryLogo/@item.Logo" alt="Card image">
                <div class="card-body">
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text">@item.Created_Date</p>
              </div>
              </a>
              <a class="btn btn-info mb-4" asp-controller="Gallary" asp-action="Details" asp-route-id="@item.Id">المزيد</a>   

 
            </div>
        </div>
        }
      </div>
  </div>

