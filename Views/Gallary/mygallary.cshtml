@using ProductGallary.TDO
@model List<GalaryInfoDTO>
@{
    ViewData["Title"] = "mygallary";
}
 <a class="btn btn-secondary mb-3" asp-area="" asp-controller="Gallary" asp-action="inseart">اضافة معرض <i class='fa fa-plus-circle'></i></a>
<div class="container">
<div class="row">

   @foreach (var item in @Model)
    {   
        <div class='col-4 mb-3'>
            <div class="card my-shadow">
              <img class="card-img-top" height="300" width="360" src="/img/GallaryLogo/@item.Logo" alt="Card image">
                  <div class="card-body">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">@item.Created_Date</p>
  
                  <a class="btn btn-info" asp-controller="Gallary" asp-action="Details" asp-route-id="@item.Id">المزيد</a>
                   <a class="btn btn-success" asp-controller="Gallary" asp-action="edit" asp-route-id="@item.Id">تعديل <i class='fa fa-edit'></i></a>
                    <a class="btn btn-danger" asp-controller="Gallary" asp-action="delete" asp-route-id="@item.Id">حذف <i class='fa fa-trash'></i></a>

                </div>
             </div>
         </div>
    }
  </div>
  </div>