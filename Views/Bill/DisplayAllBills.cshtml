@using ProductGallary.TDO

@{
    // This View Used To Dispaly All Bills To The Admin
}
@model List<BillInfoDTO>



@if (Model.Count == 0)
{
    <h1 class='text-center text-danger'>لا يوجد فواتير</h1>
}
else
{
    int counter = 0;
    <h1 class='text-center text-info mb-5'>الفواتير</h1>
    foreach(BillInfoDTO bill in Model)
    {
        counter++;
        <span class='text-info fs-4 fw-bold p-2 '  >@counter</span>
         <div class='row justify-content-between  mt-2 '>
            <p class='col-sm-6 '>رقم الفاتوره:</p>
            <p class='col-sm-6 '>@bill.Id</p>
        </div>
        <div class='row justify-content-between  mt-2 '>
            <p class='col-sm-6 '>اسم العميل:</p>
            <p class='col-sm-6 '>@bill.userName</p>
        </div>
        <h2 class='text-center  mt-2 mb-3'>المنتجات</h2>
        <div class='row justify-content-between  mt-2  mb-3'>
                <p class='col-sm-6 '>المنتج</p>
                <p class='col-sm-6'>السعر</p>
            </div>
        @foreach (var item in bill.products)
        {
            <div class='row justify-content-between  mt-2 '>
                <p class='col-sm-6 '>@item.Name</p>
                <p class='col-sm-6 '>@item.Price جنيه</p>
            </div>
        }

         <div class='row justify-content-between mt-2 '>
                <p class='col-sm-6  fs-5 fw-bold'>الأجمالى</p>
                <p class='col-sm-6 '>@bill.Price جنيه</p>
         </div>
         <hr  class='mt-3 mb-4'/>
    
    }
    <button class='btn btn-info' onclick="printBills()">طباعه الفواتير</button>
}

@section Scripts{
    <script>
        function printBills()
        {

            window.print();
        }
    </script>
}